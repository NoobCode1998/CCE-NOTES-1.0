<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="button_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/textclr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:radius">100dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:elevation">10dp</item>


    </style>

    <style name="card" parent="Widget.MaterialComponents.CardView">
            <item name="cardCornerRadius">30dp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="cardBackgroundColor">@color/btn_round_clr</item>

    </style>
<style name="category_btn_theme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textColor">@color/textclr</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">50sp</item>
    <item name="android:background">@drawable/sscategorybackground</item>
    <item name="android:textStyle">bold</item>
<item name="android:fontFamily">sans-serif-black</item>
    <item name="android:layout_margin">5dp</item>
</style>

    <style name="edittext_style" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:padding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textColor">@color/edittext_textcolor</item>
       <item name="android:textColorHint">@color/edittext_hintcolor</item>
    </style>
<style name="AlertDialogStyle_rename" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:background">@drawable/sscategorybackground</item>
    <item name="dialogCornerRadius">10dp</item>
</style>
    <style name="AlertDialogStyle_delete" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/sscategorybackground</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="dialogCornerRadius">10dp</item>
</style>


</resources>
